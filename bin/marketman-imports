#!/bin/bash
# MarketMan Notion Import Watcher Cron Wrapper
# Add this to crontab to keep the Notion import watcher running

cd /root/marketMan

# Activate virtual environment if needed
# source venv/bin/activate

# Run the watcher (no debug by default)
python3 src/core/notion_import_watcher.py >> /var/log/marketman-imports.log 2>&1
